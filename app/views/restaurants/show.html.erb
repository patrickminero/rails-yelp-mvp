<div class="container my-5">
  <div class="d-flex justify-items-spacearound w-50 align-items-baseline">
    <h1><%= @restaurant.name %></h1>
    <%= link_to '<i class="fas fa-pencil-alt mx-2"></i>'.html_safe, edit_restaurant_path(@restaurant) %>
    <%= link_to '<i class="fas fa-trash-alt mx-2"></i>'.html_safe,
                restaurant_path(@restaurant),
                method: :delete,
                data: { confirm: "Are you sure?" } %>
  </div>  
  <h2><%= @restaurant.category %></h2>
  <h2><%= @restaurant.phone_number %></h2>
  <p><%= @restaurant.address %></p>
  <%= link_to 'Back', restaurants_path, :class => 'btn btn-primary mt-5' %>
  <%= link_to 'Add a review', new_restaurant_review_path(@restaurant, @review), :class => 'btn btn-primary mt-5' %>

  <div>
    <ul class="list-group my-5">
      <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item rounded shadow-sm p-3 mb-5 bg-white rounded">
          <h2><%= review.content %><h2>
          <p><%= review.rating %></p>
        </li>
      <% end %>
    </ul>
  </div>

  <div>
    <%= simple_form_for [ @restaurant, @review ] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating %>
      <%= f.submit "Submit review", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
